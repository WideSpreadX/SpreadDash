  function sinClicked() {
    calcForm.calcScreen.value=Math.sin(calcForm.calcScreen.value);
  }
  function cosClicked() {
    calcForm.calcScreen.value=Math.cos(calcForm.calcScreen.value);
  }
  function tanClicked() {
    calcForm.calcScreen.value=Math.tan(calcForm.calcScreen.value);
  }
  function piClicked() {
    calcForm.calcScreen.value=Math.PI(calcForm.calcScreen.value);
  }
  function exSquaredClicked() {
    calcForm.calcScreen.value=Math.pow(calcForm.calcScreen.value, 2);
  }
  function sqrtClicked() {
    calcForm.calcScreen.value=Math.sqrt(calcForm.calcScreen.value);
  }
  function absClicked() {
    calcForm.calcScreen.value=Math.abs(calcForm.calcScreen.value);
