<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register a Class
        </h1>
        <form action="/academy/register-class" method="POST">
          <div class="form-group">
            <label for="name">Name of Class</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="subject">Subject of Class</label>
            <input
              type="text"
              id="subject"
              name="subject"
              class="form-control"
              placeholder="Enter the class subject"
              value="<%= typeof subject != 'undefined' ? subject: '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Skill Level</label>
            <input
              type="text"
              id="skillLevel"
              name="skillLevel"
              class="form-control"
              placeholder="Enter skill level 1-5"
              value="<%= typeof skillLevel != 'undefined' ? skillLevel : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="lessons">Lessons</label>
            <input
              type="text"
              id="lessons"
              name="lessons"
              class="form-control"
              placeholder="Enter the Lessons in this class separated by commas"
              value="<%= typeof lessons != 'undefined' ? lessons : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="certName">Certification Name</label>
            <input
              type="text"
              id="certName"
              name="certName"
              class="form-control"
              placeholder="Name of Certification"
              value="<%= typeof certName != 'undefined' ? certName : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="teacher">Teachers Name</label>
            <input
              type="text"
              id="teacher"
              name="teacher"
              class="form-control"
              placeholder="Teacher of Class"
              value="<%= typeof teacher != 'undefined' ? teacher : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="teacherAids">Teacher Aids</label>
            <input
              type="text"
              id="teacherAids"
              name="teacherAids"
              class="form-control"
              placeholder="Add the names of Teacher Aides separated by commas"
              value="<%= typeof teacherAids != 'undefined' ? teacherAids : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register Class
          </button>
        </form>
        <p class="lead mt-4">See Classes <a href="/classes">See All Classes</a></p>
      </div>
    </div>
  </div>
  